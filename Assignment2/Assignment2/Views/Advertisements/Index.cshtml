@model Assignment2.Models.ViewModels.AdsViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Show ads for community @Model.Community.Title</h1>

<p>
    <a asp-action="Create" asp-route-title="@Model.Community.Title" asp-route-id="@Model.Community.Id">Upload New</a>
</p>
<div>
    <a asp-controller="Communities" asp-action="Index">Back to List</a>
</div>

@if (Model.Advertisements.Count() <= 0)
{

    <p>There's no Ads to show</p>

}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    File Name
                </th>
                <th>
                    Image
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Advertisements)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.FileName)
                    </td>
                    <td>
                        <img src="@item.Url" style="max-width: 400px;">
                    </td>
                    <td>
                        <a asp-action="Delete" asp-route-id="@item.id">Delete</a>
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.id">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.id">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

}

